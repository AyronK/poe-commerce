@using PoECommerce.Core.Model.Search
@inherits RequirementsFilterContainerBase

<div style="display: flex; flex-direction: column">
    <div style="display: flex; flex-direction: row">
        <div class="flex-column-50">
            <div style="display: flex; flex-direction: row">
                <div style="width: 50%">
                    <Label Value="Level"></Label>
                </div>
                <div style="width: 50%">
                    <FilterMagnitudeContainer FilterMagnitude="@Level" OnChange="@((FilterMagnitude filterMagnitude) => { Level = filterMagnitude; StateHasChanged();})"></FilterMagnitudeContainer>
                </div>
            </div>
            <div style="display: flex; flex-direction: row">
                <div style="width: 50%">
                    <Label Value="Strength"></Label>
                </div>
                <div style="width: 50%">
                    <FilterMagnitudeContainer FilterMagnitude="@Strength" OnChange="@((FilterMagnitude filterMagnitude) => { Strength = filterMagnitude; StateHasChanged();})"></FilterMagnitudeContainer>
                </div>
            </div>
        </div>
        <div class="flex-column-50">
            <div style="display: flex; flex-direction: row">
                <div style="width: 50%">
                    <Label Value="Dexterity"></Label>
                </div>
                <div style="width: 50%">
                    <FilterMagnitudeContainer FilterMagnitude="@Dexterity" OnChange="@((FilterMagnitude filterMagnitude) => { Dexterity = filterMagnitude; StateHasChanged();})"></FilterMagnitudeContainer>
                </div>
            </div>
            <div style="display: flex; flex-direction: row">
                <div style="width: 50%">
                    <Label Value="Intelligence"></Label>
                </div>
                <div style="width: 50%">
                    <FilterMagnitudeContainer FilterMagnitude="@Intelligence" OnChange="@((FilterMagnitude filterMagnitude) => { Intelligence = filterMagnitude; StateHasChanged();})"></FilterMagnitudeContainer>
                </div>
            </div>
        </div>
    </div>
</div>
