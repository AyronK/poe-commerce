@inherits SocketsFilterContainerBase

<div style="display: flex; flex-direction: column">
    <div style="display: flex; flex-direction: row">
        <div style="width: 15%">
            <TextField @bind-Value="@RedMinValue" PlaceHolder="R" Style="width:100%" InputStyle="color:red"></TextField>
        </div>
        <div style="width: 15%">
            <TextField @bind-Value="@GreenMinValue" PlaceHolder="G" Style="width:100%" InputStyle="color:green"></TextField>
        </div>
        <div style="width: 15%">
            <TextField @bind-Value="@BlueMinValue" PlaceHolder="B" Style="width:100%;" InputStyle="color:cornflowerblue"></TextField>
        </div>
        <div style="width: 15%">
            <TextField @bind-Value="@WhiteMinValue" PlaceHolder="W" Style="width:100%" InputStyle="color:white"></TextField>
        </div>
        <div style="width: 20%">
            <TextField @bind-Value="@AnyMinValue" PlaceHolder="Min" Style="width:100%"></TextField>
        </div>
        <div style="width: 20%">
            <TextField @bind-Value="@AnyMaxValue" PlaceHolder="Max" Style="width:100%"></TextField>
        </div>
    </div>
</div>