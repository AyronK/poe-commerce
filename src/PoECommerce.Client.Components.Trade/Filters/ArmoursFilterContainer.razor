@using PoECommerce.Core.Model.Search
@inherits ArmoursFilterContainerBase

<div style="display: flex; flex-direction: column">
    <div style="display: flex; flex-direction: row">
        <div class="flex-column-50">
            <div style="display: flex; flex-direction: row">
                <div style="width: 50%">
                    <Label Value="Armour"></Label>
                </div>
                <div style="width: 50%">
                    <FilterMagnitudeContainer FilterMagnitude="@Armour" OnChange="@((FilterMagnitude filterMagnitude) => { Armour = filterMagnitude; StateHasChanged();})"></FilterMagnitudeContainer>
                </div>
            </div>
            <div style="display: flex; flex-direction: row">
                <div style="width: 50%">
                    <Label Value="Evasion"></Label>
                </div>
                <div style="width: 50%">
                    <FilterMagnitudeContainer FilterMagnitude="@Evasion" OnChange="@((FilterMagnitude filterMagnitude) => { Evasion = filterMagnitude; StateHasChanged();})"></FilterMagnitudeContainer>
                </div>
            </div>
        </div>
        <div class="flex-column-50">
            <div style="display: flex; flex-direction: row">
                <div style="width: 50%">
                    <Label Value="Energy Shield"></Label>
                </div>
                <div style="width: 50%">
                    <FilterMagnitudeContainer FilterMagnitude="@EnergyShield" OnChange="@((FilterMagnitude filterMagnitude) => { EnergyShield = filterMagnitude; StateHasChanged();})"></FilterMagnitudeContainer>
                </div>
            </div>
            <div style="display: flex; flex-direction: row">
                <div style="width: 50%">
                    <Label Value="Block"></Label>
                </div>
                <div style="width: 50%">
                    <FilterMagnitudeContainer FilterMagnitude="@Block" OnChange="@((FilterMagnitude filterMagnitude) => { Block = filterMagnitude; StateHasChanged();})"></FilterMagnitudeContainer>
                </div>
            </div>
        </div>
    </div>
</div>
