@using System.Text.Json
@using PoECommerce.Core.Model.Search
@inherits SearchContainerBase

<h3>Search:</h3>

<div>
    <TextField @bind-Value="@SearchText" PlaceHolder="Search item..." Style="width: 100%"></TextField>
</div>
<div>
    <TextField @bind-Value="@League" PlaceHolder="League"></TextField>
</div>

<div>
    <label>Status</label>
    <select @bind="@Status">
        <option value="@OnlineStatus.Any">Any</option>
        <option value="@OnlineStatus.Online">Online</option>
    </select>
</div>

<button @onclick="@Search">Search</button>
<button @onclick="@Clear">Clear</button>
<button>Show filters</button>


@JsonSerializer.Serialize(Query);